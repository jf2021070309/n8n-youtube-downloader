        {
            "parameters": {
                "mode": "runOnceForAllItems",
                "jsCode": "// Obtener la ruta del archivo descargado\nconst filePath = $input.item.json.stdout.trim();\n\n// Extraer el nombre del archivo\nconst fileName = filePath.split('/').pop();\n\nreturn {\n  json: {\n    ...$input.item.json,\n    filePath: filePath,\n    fileName: fileName\n  }\n};"
            },
            "id": "code-parse-path",
            "name": "Parse File Path",
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                1560,
